<div class="tip">
<li id="<%= tips.id %>">
 
  <span class="user"><strong><%= tip.user.name %></strong>
  </span>

  <span class="content"><%= link_to tip.content, tip_path(tip) %>
  </span>
  <span class="timestamp">Posted <%= time_ago_in_words(tip.created_at) %> ago.
  </span>

  <span class="hidde">
    <% if current_user?(tip.user) %>
    <%= link_to "Delete", tip, method: :delete,
                                     data: { confirm: "If you delete this, it's not coming back. Maybe, you would rather edit this tip." },
                                    title: tip.content %> |
    <span class="edit"><%= link_to "Edit", edit_tip_path(tip) %></span>
  <% end %> |
  <span class="view"><%= link_to "View #{user.name} profile", user.name %></span>
</span>
</li>
</div>